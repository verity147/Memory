<Page
    x:Class="Memory.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Memory"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MaxHeight="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <MediaElement Name="MusicPlayer"
                      Source="Assets/Music.wav" 
                      IsLooping="True"/>
        <RelativePanel Background="#FF5DAA4C">
            <Button Name="Options" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Width="64" 
                    Height="64"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="40" 
                    Content="&#xE700;" 
                    Click="Options_Click" 
                    RelativePanel.AlignLeftWithPanel="True" />
            <TextBlock FontFamily="Georgia" 
                       Name="Header" 
                       FontSize="35" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center" 
                       Text="Buche grün &amp; Buche rot" 
                       VerticalAlignment="Center" 
                       RelativePanel.AlignHorizontalCenterWithPanel="True" 
                       RelativePanel.AlignVerticalCenterWithPanel="True" />
            <TextBlock x:Name="Attempts" 
                       Text="Versuche: 0" 
                       x:FieldModifier="public"
                       FontFamily="Georgia" 
                       FontSize="35" 
                       HorizontalAlignment="Right" 
                       VerticalAlignment="Center" 
                       RelativePanel.AlignVerticalCenterWithPanel="True" 
                       RelativePanel.LeftOf="Spacer"/>
            <Rectangle Name="Spacer" 
                       Width="40" 
                       RelativePanel.AlignRightWithPanel="True" />
        </RelativePanel>
        <SplitView Name="SplitviewMenu" 
                   Grid.Row="1"
                   CompactPaneLength="64" 
                   IsPaneOpen="False" 
                   DisplayMode="Overlay"
                   OpenPaneLength="260" 
                   HorizontalAlignment="Stretch" 
                   VerticalAlignment="Stretch">
            <SplitView.Pane>
                <Grid Margin="10,40,10,40" 
                        VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Button Name="RestartButton" 
                            Grid.Row="0"
                            HorizontalAlignment="Stretch" 
                            Margin="0,0,0,40" 
                            Content="Neues Spiel" 
                            Style="{StaticResource Button}" 
                            Click="RestartButton_Click" />
                    <TextBlock Name="Volumetext" 
                                Grid.Row="1"
                                Text="Musik" 
                                Margin="0,0,0,10" 
                                FontFamily="Arial" 
                                FontSize="18" 
                                HorizontalAlignment="Center"/>
                    <Slider Name="VolumeSlider" 
                            ValueChanged="VolumeSlider_ValueChanged"
                            Value="0.5"
                            Grid.Row="2"
                            HorizontalAlignment="Stretch" 
                            Margin="0,0,0,40" 
                            Maximum="1" StepFrequency="0.05"/>
                    <TextBlock Name="CreditsHeader" 
                                Grid.Row="3"
                                Margin="0,0,0,10" 
                                Text="Über das Spiel" 
                                FontFamily="Arial Black" 
                                FontSize="22" 
                                HorizontalAlignment="Center" 
                                FontWeight="Bold" 
                               VerticalAlignment="Bottom"/>
                    <RichTextBlock Name="Credits" 
                                    Grid.Row="4"
                                    HorizontalAlignment="Stretch" 
                                    Margin="0,0,0,40" 
                                    FontFamily="Arial" 
                                    FontSize="18">
                        <Paragraph>
                            <LineBreak/>
                            Programmierung:
                            <LineBreak/>
                            Vera Schöniger
                            <LineBreak/>
                            <LineBreak/>
                            Bilder:
                            <LineBreak/>
                            Elfi Schöniger
                            <LineBreak/>
                            <LineBreak/>
                            Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor
                            <Hyperlink NavigateUri="https://edition-schoene-buecher.de/">Website</Hyperlink>
                        </Paragraph>
                    </RichTextBlock>
                    <Button Name="QuitButton" 
                            Grid.Row="5" 
                            HorizontalAlignment="Stretch" 
                            Content="Spiel beenden" 
                            Style="{StaticResource Button}" 
                            VerticalAlignment="Bottom" 
                            Click="QuitButton_Click"/>
                </Grid>
            </SplitView.Pane>
            <SplitView.Content>
                <Frame Name="GameFrame" 
                       Grid.Row="1" 
                       VerticalAlignment="Stretch" 
                       HorizontalAlignment="Stretch" 
                       Background="LightSteelBlue" 
                       Padding="0,0,0,0">   
                </Frame>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>
